<Window x:Class="WindowsClient.ApplicationLayout.ToastNotification.ErrorNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsClient.ApplicationLayout.ToastNotification"
        mc:Ignorable="d"
        WindowStyle="None"
        ShowInTaskbar="False" 
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="#F94642"
        Foreground="White"
        Padding="0"
        Margin="0"
        BorderThickness="0"
        Title="ErrorNotification" 
        x:Name="Notification"
        Width="350">

    <StackPanel Orientation="Horizontal">
        <Image Source="../Icons/Error.png"
               Height="48"
               Width="48" />

        <StackPanel Margin="10,0,0,0">
            <TextBlock Name="txtTitle" Text="Error Title"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,5"/>

            <TextBlock Name="txtMessage" Text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Magnams eos accusamus voluptas aspernatur!"
                       TextWrapping="Wrap"
                       Width="240"
                       Margin="0,2"/>
        </StackPanel>
    </StackPanel>
</Window>
